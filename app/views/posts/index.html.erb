<% @posts.each do |post| %>
  <div class="row">
    <div class="card mb-3">
      <img class="card-img-top"
      src="<%= url_for post.optimized_image(post.thumbnail, 586, 180) %>"
      alt="Blog Image Card"
      />
      <div class="card-body">
        <div class="card-title">
          <%= link_to post.title, post %>
        </div>
        <div class="card-text">
          <%= post.body.to_plain_text.truncate_words(50) %>
        </div>
        <div class="card-text">
          <small>
            <%= post.updated_at.strftime("%A, %B %e, %Y") %> by 
            <%= post.user.first_name %> <%= post.user.last_name %> | <%= pluralize(post.views, "View") %> | 0 coments
          </small>          
        </div>
      </div>
    </div>
  </div>
<% end %>
<div class="digg_pagination">
  <%= will_paginate @posts, :container => false %>
</div>
