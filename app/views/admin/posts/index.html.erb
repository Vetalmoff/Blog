<h1>Listing posts</h1>
 
<table class="table">
  <tr>
    <th scope="col">Title</th>
    <th scope="col">Owner</th>
    <th scope="col">Views</th>
    <th scope="col">Coments</th>
    <th scope="col"></th>
    <th scope="col"></th>
    <th scope="col"></th>
  </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.user.first_name %> <%= post.user.last_name %></td> 
      <td><%= post.views%></td>
      <td>0 coments</td>
      <td><%= link_to 'Show', post_path(post) %></td>
      <td><%= link_to 'Edit', edit_admin_post_path(post) %></td>
      <td><%= link_to 'Destroy', admin_post_path(post), data: {confirm: "Are you sure?"},
                                      :method => :delete %></td>
    </tr>
  <% end %>
</table>

<div class="digg_pagination">
  <%= will_paginate @posts, :container => false %>
</div>
 
<br />
 
<%= link_to 'New post', new_admin_post_path, class: 'btn btn-outline-primary' %>